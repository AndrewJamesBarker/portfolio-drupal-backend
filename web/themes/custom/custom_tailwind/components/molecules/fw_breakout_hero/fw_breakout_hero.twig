<div {{ attributes.addClass(
  'relative',
  'h-[60vh]',
  'max-h-60',
  'sm:max-h-60',
  'lg:max-h-90',
  'bg-gray-900',
  'text-white',
  'flex',
  'items-center',
  'justify-center',
  'overflow-hidden') }}>
  <div class="absolute inset-0 opacity-50 bg-cover bg-center">
    {% block background_image %}
      <div class="bg-gray-700 h-full w-full"></div> {# fallback #}
    {% endblock %}
  </div>

  <div class="relative z-10 text-center">
    <h1 class="text-4xl font-bold">{{ title }}</h1>
    {% if description %}
      <p class="mt-2 text-lg py-2">{{ description }}</p>
    {% endif %}
    {% block cta %}{% endblock %}
  </div>
</div>
