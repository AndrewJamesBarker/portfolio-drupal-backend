/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}



{% if content %}
  <div class="flex justify-between items-center">
    <div class="flex items-center space-x-2">

      <a href="/" rel="home" class="relative block w-[75px] h-[75px]">
        <img
          src="/sites/default/files/Good_Logo_AJB_0.png"
          alt="Light Logo"
          width="75"
          height="75"
          class="absolute inset-0 object-contain w-full h-full opacity-100 dark:opacity-0 transition-opacity duration-300" />
        <img
          src="/sites/default/files/good-logo-white.png"
          alt="Dark Logo"
          width="65"
          height="65"
          class="absolute inset-0 object-contain w-full h-full opacity-0 dark:opacity-100 transition-opacity duration-300" />
      </a>

      <h1 class="sr-only">
        <a href="/" rel="home">Andrew Barker</a>
      </h1>

    </div>
    {% embed 'custom_tailwind:theme_mode_toggle' with {} %}
      {% block moon %}
        <svg
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          stroke="black"
          class="w-4 h-4 theme-icon-dark"
          aria-hidden="true"
        >
          <title>Dark mode</title>
          <path
            d="M3.32031 11.6835C3.32031 16.6541 7.34975 20.6835 12.3203 20.6835C16.1075 20.6835 19.3483 18.3443 20.6768 15.032C19.6402 15.4486 18.5059 15.6834 17.3203 15.6834C12.3497 15.6834 8.32031 11.654 8.32031 6.68342C8.32031 5.50338 8.55165 4.36259 8.96453 3.32996C5.65605 4.66028 3.32031 7.89912 3.32031 11.6835Z" fill="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      {% endblock %}
      {% block system %}
        <svg
          viewBox="0 0 24 24"
          fill="black"
          xmlns="http://www.w3.org/2000/svg"
          class="w-4 h-4 theme-icon-system"
          aria-hidden="true"
