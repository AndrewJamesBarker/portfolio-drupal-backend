<div class="layout-container flex flex-col min-h-screen bg-surface text-surface">
  <header role="banner" class="site-container py-6 bg-gradient-to-r from-sky-400 to-sky-400 via-sky-100 text-black
dark:from-black dark:via-gray-700 dark:to-black dark:text-white">
    {{ page.header }}
  </header>

  <div class="site-container">
    {{ page.primary_menu }}
    {{ page.secondary_menu }}
    {{ page.breadcrumb }}
    {{ page.highlighted }}
    {{ page.help }}
  </div>

  <main role="main" class="min-h-90 flex-grow front-hero-bg " >
    <a id="main-content" tabindex="-1"></a>

    {# Section with max-width layout #}
    <div class="site-container py-6">
      {% if page.highlighted %}
        {{ page.highlighted }}
      {% endif %}

      {{ page.content }}
    </div>


    {% if page.sidebar_first %}
      <aside class="layout-sidebar-first" role="complementary">
        {{ page.sidebar_first }}
      </aside>
    {% endif %}

    {% if page.sidebar_second %}
      <aside class="layout-sidebar-second" role="complementary">
        {{ page.sidebar_second }}
      </aside>
    {% endif %}

  </main>

  {% if page.footer %}
    <footer role="contentinfo" class="layout--full-width bg-gradient-to-r from-sky-400 to-sky-400 via-sky-100 text-black
      dark:from-black dark:via-gray-700 dark:to-black dark:text-white min-h-66 site-container flex flex-col justify-between h-full py-6">
      <div class="grow">
        {{ page.footer }}
      </div>
      <div class="mt-auto">
        {{ page.footer_bottom }}
      </div>
    </footer>
  {% endif %}
</div>
